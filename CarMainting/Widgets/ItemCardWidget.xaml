<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarMainting.Widgets.ItemCard"
             x:Name="ItemCardContent">
    <Frame>
        <StackLayout HeightRequest="120"
                     HorizontalOptions="Center">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="gotoSellerScreen" />
            </StackLayout.GestureRecognizers>
            <Image 
                   Source="{Binding ImageUrl, Source={x:Reference ItemCardContent}}"
                   HeightRequest="70"
                   WidthRequest="70" />
            <Label  x:Name="serviceName" Text="{Binding ServiceNameText, Source={x:Reference ItemCardContent}}" />
        </StackLayout>
    </Frame>
</ContentView>



